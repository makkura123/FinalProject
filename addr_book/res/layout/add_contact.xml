<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    tools:context=".AddContact"
    android:columnOrderPreserved="false" >
    
<TextView android:text="Contact Name:" android:layout_column="0" android:layout_gravity="left"/>

<EditText android:id="@+id/txtName" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_column="1" android:layout_columnSpan="2"
        android:ems="10" />

<TextView android:text="Phone Number: " android:layout_column="0" android:layout_gravity="left"/>

<EditText android:id="@+id/txtPhone" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_column="1" android:layout_columnSpan="2"
        android:ems="10" android:inputType="phone"/>

<TextView android:text="E-Mail: " android:layout_column="0" android:layout_gravity="left"/>

<EditText android:id="@+id/txtEmail" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_column="1" android:layout_columnSpan="2"
        android:ems="10" />

<TextView android:text="Street Name: " android:layout_column="0" android:layout_gravity="left"/>

<EditText android:id="@+id/txtStreet" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_column="1" android:layout_columnSpan="2"
        android:ems="10" />

<TextView android:text="City: " android:layout_column="0" android:layout_gravity="left"/>

<EditText android:id="@+id/txtCity" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_column="1" android:layout_columnSpan="2"
        android:ems="10" />

<TextView android:text="Country: " android:layout_column="0" android:layout_gravity="left"/>

<EditText android:id="@+id/txtCountry" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_column="1" android:layout_columnSpan="2"
        android:ems="10" />


<Space android:layout_column="0" android:layout_gravity="fill" android:layout_columnSpan="3"/>

<Button
    android:id="@+id/btnAdd"
    android:layout_column="2"
    android:nestedScrollingEnabled="true"
    android:onClick="btnAdd"
    android:text="Add" />

</GridLayout>